<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="async-support" description="anyframe-async-support-pi plugin">
  <groupId>org.anyframe.plugin</groupId>
  <artifactId>anyframe-async-support-pi</artifactId>
  <version>1.0.0</version>
  <dependent-plugins>
    <dependent-plugin name="core" version="1.5.1"/>
    <dependent-plugin name="datasource" version="1.0.3"/>
    <dependent-plugin name="spring" version="1.0.3"/>
    <dependent-plugin name="logging" version="1.0.3"/>
  </dependent-plugins>
  <resources>
    <resource dir="src/main/java" filtered="true" packaged="true">
      <include name="**/async/support/**/*.java"/>
    </resource>
    <resource dir="src/test/java" filtered="true" packaged="true">
      <include name="**/async/support/**/*.java"/>
    </resource>
    <resource dir="src/main/webapp" filtered="false" packaged="false">
      <include name="**/async-support/**/*.*"/>
      <exclude name="**/anyframe.jsp" merged="true"/>
    </resource>
  </resources>
  <samples>true</samples>
  <essential>false</essential>
</plugin>